@model GameState
@{
    ViewBag.Title = "Game";
}

<hgroup>

    <h2>@ViewBag.Title.</h2>

    <h3>@ViewBag.Message</h3>

</hgroup>

<p>Playing as:<span id="nick"></span></p>
<div class="container">

    <input type="text" id="TxtMessage" />

    <input type="button" id="BtnSend" value="Send" />
    <input type="button" id="BtnRefresh" value="Refresh" onclick="@Url.Action("Refresh","Home")" />
    <input type="button" id="BtnStart" value="Start" onclick="@Url.Action("Index","Game")" />

    <input type="hidden" id="UserName" />

    <ul id="Chats"></ul>

</div>
<div class="container">

    @*<input type="text" id="TxtMessage" />

        <input type="button" id="BtnSend" value="Send" />

        <input type="hidden" id="UserName" />

        <ul id="Chats"></ul>*@

</div>



@section scripts {


    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>

    <script src="~/signalr/Hubs"></script>



    <script>
        $(function ()
        {
            var nick = prompt('Please Enter Your Name:', '');
            $('#nick').text(nick);

            var chat = $.connection.chatHub;
            // attach event handlers to methods coming from c# hub

            chat.client.RefreshPlayerNamesList = function (names)
            {
                $('#Chats').empty();
                $.each(names, function (k, v)
                {
                    $('#Chats').append('<li><strong>' + v + '</li>');
                });
            };

            //

            $.connection.hub.start().done(function ()
            {
                //attach  event handlers to call c# hub methods from page
                $('#BtnSend').click(function ()
                {
                    debugger;
                    chat.server.letsChat($('#UserName').val(), $('#TxtMessage').val());

                    $('#TxtMessage').val('').focus();
                });



                chat.server.playerJoined($('#nick').text());
            });

         
        });



    </script>

}
